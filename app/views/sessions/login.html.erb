<h1>Sing In</h1>

<%= form_tag('/sessions', method: :post) do %>
    <div class="field">
      <p>Enter your Email, please:</p>
      <%= text_field_tag :email %>
    </div>

    <div class="field">
      <p>Enter your password, please:</p>
      <%= password_field_tag :password %>
    </div>
    <div class="actions">
      <%= submit_tag 'Вхід!' %>
    </div>
<% end %>
